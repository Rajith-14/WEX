<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Admin Home</title>
</head>
<body>
  <h2>Add Bus</h2>
  <form action="/add-bus" method="POST">
    <input type="text" name="busNo" placeholder="Bus No" required><br>
    <input type="text" name="serviceNo" placeholder="Bus Service No" required><br>
    <input type="text" name="from" placeholder="From" required><br>
    <input type="text" name="to" placeholder="To" required><br>
    <input type="text" name="via" placeholder="Via Places" required><br>
    <button type="submit">Add Bus</button>
  </form>

  <h2>Add Driver</h2>
  <form action="/add-driver" method="POST">
    <input type="text" name="driverId" placeholder="Driver ID" required><br>
    <input type="password" name="password" placeholder="Password" required><br>
    <button type="submit">Add Driver</button>
  </form>

  <h2>Assign Driver to Bus</h2>
  <form action="/assign-driver-to-bus" method="POST">
    <label for="driver">Select Driver:</label>
    <select name="driverId" id="driver" required>
      <option value="" disabled selected>Select a Driver</option>
      <% drivers.forEach(driver => { %>
        <option value="<%= driver._id %>"><%= driver.driverId %></option>
      <% }) %>
    </select><br>

    <label for="bus">Select Bus:</label>
    <select name="busId" id="bus" required>
      <option value="" disabled selected>Select a Bus</option>
      <% buses.forEach(bus => { %>
        <option value="<%= bus._id %>"><%= bus.busNo %> - <%= bus.serviceNo %></option>
      <% }) %>
    </select><br>

    <button type="submit">Assign Driver to Bus</button>
  </form>
</body>
</html>
